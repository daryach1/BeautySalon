<Page x:Class="BeautySalon.Views.ClientVisitsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySalon.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientVisitsView"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Посещения"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource thirdColor}"/>
        <DataGrid x:Name="clientServiceDataGrid"
                  AutoGenerateColumns="False"
                  ColumnWidth="*"
                  IsReadOnly="True"
                  Grid.Row="1"
                  FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Service" 
                                    Binding="{Binding Service.Title}"/>
                <DataGridTextColumn Header="StartTime"
                                    Binding="{Binding StartTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
